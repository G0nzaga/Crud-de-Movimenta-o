<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crud de Movimentações</title>
  <link rel="stylesheet" href="cm.css">
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
  <div class="container">
    <div class="header">
      <span>Crud de Movimentações</span>
      <button onclick="openModal()" id="new">Incluir</button>
    </div>

    <div class="divTable">
      <table>
        <thead>
          <tr>
            <th>Tipo de Movimentação</th>
            <th>Data e Hora do Início</th>
            <th>Data e Hora do Fim</th>
            <th class="acao">Editar</th>
            <th class="acao">Excluir</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>

    <div class="modal-container">
      <div class="modal">
        <form method="post" action="/crud">
  
          <label for="m-tm">Tipo de Movimentação</label>
          <select id="m-tm" type="text" name="movimentação">
            <option id="m-tm">Embarque</option>
            <option id="m-tm">Descarga</option>
            <option id="m-tm">Gate in</option>
            <option id="m-tm">Gate out</option>
            <option id="m-tm">Reposicionamento</option>
            <option id="m-tm">Pesagem</option>
            <option id="m-tm">Scanner</option>
          </select>
          <br>
          <br>

        
          <label for="m-di">Data e Hora do Início</label>
          <input type="datetime-local" id="m-di" name="dataini">
          <br>
          <br>
          

          <label for="m-df">Data e Hora do Fim</label>
          <input type="datetime-local" id="m-df" name="datafim">
          <br>
          <br>

          <button id="btnSalvar">Salvar</button>
        </form>
      </div>
    </div>

  </div>
  <script src="cm.js"></script>
</body>

</html>